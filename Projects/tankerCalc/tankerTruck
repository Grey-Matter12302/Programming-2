	 4B Computer Programming */

import java.util.Scanner;

public class Main{

	public static void main(String args[]){    	 

  	Scanner tanker = new Scanner(System.in);

			System.out.println("Input the average amount of water you drink per day(in cups):  ");
			float avgC = tanker.nextFloat();
			
			System.out.println("Input your estimated lifespan(in years): ");
			float age = tanker.nextFloat();

			System.out.println("you will consume " + ((age * avgC * 0.0625f * 365f) / 11000f) + " tankers in your life.");
			
	}
}
