import java.util.Scanner;

public class tankerTruck{

	public static void main(String args[]){    	 

  	Scanner tanker = new Scanner(System.in);

			System.out.println("Input the average amount of water you drink per day(in cups):  ");
			float avgC = tanker.nextFloat();
			System.out.println("Avg cups consumed = " + avgC);
    		 
			System.out.println("Input your age(in months): ");
			float age = tanker.nextFloat();
			System.out.println("Age = " + age + " months");

			float avgGallonsYear = avgC * 0.0625f * 365f;
			System.out.println("If you lived an average lifespan you would consume " + ((78.74 * avgGallonsYear) / 11000f) + " tankers in your life." );
	}
}
